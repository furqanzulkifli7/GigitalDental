{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
	    "rewrites": [
      {
        "source": "index.html",
        "destination": "/404.html"
      }
    ],
    "redirects": [
      {
        "source": "/index.html",
        "destination": "/404.html",
        "type": 301
      }
    ]
  }
}
